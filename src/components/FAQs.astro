---

<section id="faqs" class="faqs gutter">
  <h2 class="headline">FAQS</h2>
  {faqs.map(faq => (
    <details class="border-b font-base">
      <summary>
        <span class="caret" aria-hidden="true">
          <svg xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" fill="currentColor" viewBox="0 0 16 16"><path fill-rule="evenodd" d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708"/></svg>
        </span>
        <h3>{faq.question}</h3>
      </summary>
      <div class="container">
        <div class="answer">
          {faq.answer.map(paragraph => {
            if (paragraph.includes('Boo Boo')) {
              return (
                <div class="img-wrapper-inline-photo">
                  <p set:html={paragraph}></p>
                  <Image src={jtBooBooRecordsYoung} alt="JT at Boo Boo's" />
                </div>
              );
            }

            return <p set:html={paragraph}></p>;
          })}
        </div>
        {!!faq.images?.length && (
          <div class="img-wrapper">
            {faq.images.map(({ src, alt, caption }, index) => (
              <figure class={index > 6 ? 'desktop-only' : ''}>
                <Image src={src} alt={alt} />
                {caption && <figcaption>{caption}</figcaption>}
              </figure>
            ))}
          </div>
        )}
      </div>
    </details>
  ))}
</section>