---
import '../styles/components/faqs.scss';

const faqs = [
  {
    question: "Is Karly pregnant?",
    answer: [
      "No, but thanks for asking!",
    ]
  },
   {
    question: "Why so soon then?",
    answer: [
      "It wasn't until a recent trip to San Luis Obispo that sparked the idea to get married on a date that was extremely meaningful to us."
    ],
    images: [],
  },
  {
    question: "What is the dress code?",
    answer: [
      "The dress code is semi-formal. We encourage you to dress up and celebrate with us!"
    ]
  },
    {
    question: "Where to stay?",
    answer: [
      "We recommend staying in downtown San Luis Obispo, where there are plenty of hotels and accommodations."
    ]
  },
  {
    question: "Where's the best place to fly in?",
    answer: [
      "The closest airport is San Luis Obispo County Regional Airport (SBP), which is about 5 miles from downtown."
    ]
  },
  {
    question: "What time should I arrive?",
    answer: [
      "We recommend arriving at least 30 minutes early to allow time for parking and finding your seat."
    ]
  },
];
---

<section class="faqs gutter">
  <h2 class="headline">FAQS</h2>
  {faqs.map(faq => (
    <details class="border-b font-base">
      <summary>
        <span class="caret" aria-hidden="true">
          <svg xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" fill="currentColor" viewBox="0 0 16 16"><path fill-rule="evenodd" d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708"/></svg>
        </span>
        <h3>{faq.question}</h3>
      </summary>
      <div class="answer">
        {faq.answer.map(paragraph => <p>{paragraph}</p>)}
      </div>
      {!!faq.images?.length && (
        <div class="img-wrapper">
          {faq.images.map(({ src, alt, caption }) => (
            <figure>
              <img src={src} alt={alt} />
              <figcaption>{caption}</figcaption>
            </figure>
          ))}
        </div>
      )}
    </details>
  ))}
</section>